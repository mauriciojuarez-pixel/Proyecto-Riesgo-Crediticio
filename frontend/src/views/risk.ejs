<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Evaluación de Riesgo - Riesgo Crediticio</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            background: #eef2f7;
            color: #333;
        }

        nav {
            background-color: #4f46e5;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #fff;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        nav span {
            font-weight: 600;
            font-size: 16px;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            margin-left: 20px;
            font-weight: 500;
            transition: all 0.3s;
        }

        nav a:hover {
            color: #ffeb3b;
        }

        .container {
            max-width: 500px;
            margin: 50px auto;
            background: #fff;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 12px 25px rgba(0,0,0,0.08);
            transition: transform 0.3s;
        }

        .container:hover {
            transform: translateY(-3px);
        }

        h1 {
            font-size: 26px;
            margin-bottom: 25px;
            color: #333;
            text-align: center;
        }

        form input {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 15px;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 14px;
            transition: border 0.3s;
        }

        form input:focus {
            border-color: #4f46e5;
            outline: none;
        }

        form button {
            width: 100%;
            padding: 12px;
            background: #4f46e5;
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            transition: background 0.3s;
        }

        form button:hover {
            background: #4338ca;
        }

        .resultado {
            margin-top: 25px;
            padding: 15px;
            border-radius: 10px;
            background: #e0e7ff;
            text-align: center;
            font-weight: 600;
            color: #1e3a8a;
            min-height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .error {
            color: #b91c1c;
            margin-bottom: 15px;
            text-align: center;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <nav>
        <% if (user) { %>
            <span>Bienvenido, <%= user.username %></span>
            <div>
                <a href="/dashboard">Dashboard</a>
                <a href="/auth/logout">Cerrar Sesión</a>
            </div>
        <% } else { %>
            <span>Bienvenido, Invitado</span>
            <a href="/auth/login">Iniciar Sesión</a>
        <% } %>
    </nav>

    <div class="container">
        <h1>Evaluación de Riesgo Crediticio</h1>

        <% if (error) { %>
            <div class="error"><%= error %></div>
        <% } %>

        <form id="riskForm">
            <input type="number" name="ingreso" placeholder="Ingreso mensual" required>
            <input type="number" name="deuda_ratio" placeholder="Ratio de deuda" required>
            <input type="number" name="antiguedad" placeholder="Años de antigüedad laboral" required>
            <input type="number" name="estabilidad_laboral" placeholder="Estabilidad laboral (1-5)" required>
            <button type="submit">Evaluar Riesgo</button>
        </form>

        <div class="resultado" id="resultado"></div>
    </div>

    <script>
        const form = document.getElementById("riskForm");
        const resultadoDiv = document.getElementById("resultado");

        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            resultadoDiv.textContent = "Evaluando...";

            const formData = new FormData(form);
            const datos = Object.fromEntries(formData.entries());

            try {
                const res = await fetch("/risk/predict", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(datos)
                });

                const data = await res.json();
                if (res.ok) {
                    resultadoDiv.textContent = `Riesgo: ${data.riesgo || "No disponible"}`;
                } else {
                    resultadoDiv.textContent = `Error: ${data.error || "No se pudo evaluar"}`;
                }
            } catch (err) {
                resultadoDiv.textContent = "Error de conexión con el servidor";
            }
        });
    </script>
</body>
</html>
