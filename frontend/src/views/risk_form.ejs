<!-- frontend/src/views/risk_form.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Solicitud de Riesgo</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Formulario de Solicitud de Riesgo</h1>
        <form action="/risk/predict" method="POST">
            <label for="ingreso">Ingresos Mensuales:</label>
            <input type="number" step="0.01" name="ingreso" id="ingreso" required>

            <label for="deuda_ratio">Deuda / Ingreso:</label>
            <input type="number" step="0.01" name="deuda_ratio" id="deuda_ratio" required>

            <label for="antiguedad">Antigüedad Laboral (años):</label>
            <input type="number" name="antiguedad" id="antiguedad" required>

            <label for="estabilidad_laboral">Estabilidad Laboral (1-10):</label>
            <input type="number" name="estabilidad_laboral" id="estabilidad_laboral" min="1" max="10" required>

            <label for="token">Token JWT:</label>
            <input type="text" name="token" id="token" required>

            <button type="submit">Enviar Solicitud</button>
        </form>
    </div>
    <script src="/js/app.js"></script>
</body>
</html>
