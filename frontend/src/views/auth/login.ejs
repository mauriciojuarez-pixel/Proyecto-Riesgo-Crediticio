<!-- frontend/src/views/auth/login.ejs -->

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Login - Riesgo Crediticio</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Iniciar Sesión</h1>

        <% 
            // Aseguramos que la variable 'error' exista
            const errorMsg = typeof error !== 'undefined' && error ? error : null;
        %>

        <% if (errorMsg) { %>
            <div class="alert alert-danger"><%= errorMsg %></div>
        <% } %>

        <form action="/auth/login" method="POST">
            <input type="email" name="email" placeholder="Correo electrónico" required>
            <input type="password" name="password" placeholder="Contraseña" required>
            <button type="submit">Iniciar Sesión</button>
        </form>

        <p>¿No tienes cuenta? <a href="/auth/register">Regístrate aquí</a></p>
    </div>
</body>
</html>
